{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": [
            "es6"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@components/": [
                "src/components/index"
            ],
            "@database/": [
                "src/database/index"
            ],
            "@image/*": [
                "src/image/*"
            ],
            "@screen/*": [
                "src/screen/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@type/": [
                "src/types/index"
            ],
        },
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}